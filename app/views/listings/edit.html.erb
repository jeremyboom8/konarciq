<div class="container">
  <%= simple_form_for @listing do |f| %>
  <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2 listing-custom">
    <form class="form-listing">
      <h2 class="form-listing-heading" style="text-align: center;">Update listing</h2>
      <%= f.error_notification %>
      <%= f.input :title, required: true, autofocus: true, class: "form-control", placeholder: "Title of your experience" %>

      <%= f.input :caption, required: true, autofocus: true, class: "form-control", placeholder: "A catchy short caption. Should be below 100 characters" %>

      <%= f.input :description, autofocus: true, class: "form-control", hint: "What will people be doing?" %>

      <%= f.input :address, required: true, autofocus: true, class: "form-control", hint: "Please include, post code and country." %>

      <%= f.input :youtube_id, required: true, autofocus: true, class: "form-control", hint: "Before copy + pasting, delete the above Youtube ID" %>

      <%= f.input :photos, as: :attachinary %>

      <%= f.button :submit, "Update listing", class: "btn btn-lg btn-primary btn-block" %>
    </form>
    <p class="text-center" style="margin-top: 30px;"><strong>DANGER</strong> - Deleting your listing is permanent and we won't be able to retrieve data</p>
    <%= link_to "Remove listing", listing_path(@listing), method: 'delete', class: "btn btn-lg btn-delete btn-block" %>
  </div>
  <% end %>
</div>
