<div class="container">
  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name, defaults: { required: false })) do |f| %>
    <form class="form-signup text-center">
    <%= f.error_notification %>
      <h2 class="form-signup-heading">Sign up</h2>

      <%= f.input :email, required: true, autofocus: true, class: "form-control input-email", placeholder: "Email address", id: "inputEmail", label: false %>

      <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), id: "inputPassword", class: "form-control input-password", placeholder: "Password", label: false %>

      <%= f.input :password_confirmation, required: true, id: "inputPassword", class: "form-control", placeholder: "Confirm Password", label: false %>
      <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
      <p></p>
      <p><%= render "devise/shared/links" %></p>
    </form>
  <% end %>
</div>
